<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category.AddCategory"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Product" 
        android:gravity="center"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <ImageView
            android:id="@+id/headphones"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/offers"
            />
        <ImageView
            android:id="@+id/laptops"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/laptops"/>
        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/mobiles"
            />
        <ImageView
            android:id="@+id/more"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/more"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/purses"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/purses_bags"
            />
        <ImageView
            android:id="@+id/tshirts"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/tshirts"/>
        <ImageView
            android:id="@+id/shoes"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/shoess"
            />
        <ImageView
            android:id="@+id/sports"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/sports"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        >

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/glasses"
            />
        <ImageView
            android:id="@+id/books"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/books"/>

        <ImageView
        android:id="@+id/hats"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/hats"/>
        <ImageView
            android:id="@+id/sweaters"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/sweather"/>
    </LinearLayout>
</LinearLayout>